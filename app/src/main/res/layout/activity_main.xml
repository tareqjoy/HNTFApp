<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/hwntflogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hntflogo" />


    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/donateL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/donateImg"
                android:layout_width="55dp"

                android:layout_height="55dp"
                android:src="@drawable/donatesollarsign" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="DONATE"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"

                android:textAllCaps="true"
                android:textSize="17dp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/downloadL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="10dp"
            >

            <ImageView

                android:id="@+id/dwnldImg"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/download" />

            <ImageView
                android:id="@+id/lock1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_lock_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dwnldImg"
                android:layout_marginBottom="18dp"
                android:layout_centerHorizontal="true"
                android:text="DOWNLOAD"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"

                android:textAllCaps="true"
                android:textColor="@color/yellow"
                android:textSize="17dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bookL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/booking"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:layout_centerHorizontal="true"
                android:src="@drawable/ebooksign" />

            <ImageView
                android:id="@+id/lock2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_lock_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/booking"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:text="DIVE-IN"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"

                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="17dp" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/loadL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blacktrans"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloading...Please wait"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>